/// Initializes the random number generator with the current time.
def randomize() {
    raw {
        srand(time(NULL));
    }
}

/// Returns a random integer between min and max (inclusive).
def random(min: int, max: int): int {
    return min + rand() mod (max - min + 1);
}

test {
    randomize();
    mut val r: int = random(1, 10);
    assert(r >= 1, "random(1, 10) should be >= 1");
    assert(r <= 10, "random(1, 10) should be <= 10");
}