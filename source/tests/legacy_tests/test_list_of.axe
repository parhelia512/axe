// Test the list() feature for dynamic arrays

use std.io (
    print_i32,
    println
);

model Token {
    token_type: i32;
    value: i32;
}

def main() {
    // Create a dynamic array using list()
    mut tokens: list(Token);
    
    // Create some tokens
    mut t1: Token;
    t1.token_type = 1;
    t1.value = 100;
    
    mut t2: Token;
    t2.token_type = 2;
    t2.value = 200;
    
    mut t3: Token;
    t3.token_type = 3;
    t3.value = 300;
    
    // Append tokens to the list
    append(tokens, t1);
    append(tokens, t2);
    append(tokens, t3);
    
    // Access and print the tokens
    println "Token 0: type=";
    print_i32(tokens.data[0].token_type);
    print " value=";
    print_i32(tokens.data[0].value);
    println "";
    
    println "Token 1: type=";
    print_i32(tokens.data[1].token_type);
    print " value=";
    print_i32(tokens.data[1].value);
    println "";
    
    println "Token 2: type=";
    print_i32(tokens.data[2].token_type);
    print " value=";
    print_i32(tokens.data[2].value);
    println "";
    
    // Test with simple types
    mut numbers: list(i32);
    append(numbers, 10);
    append(numbers, 20);
    append(numbers, 30);
    append(numbers, 40);
    
    println "Numbers:";
    print_i32(numbers.data[0]);
    print " ";
    print_i32(numbers.data[1]);
    print " ";
    print_i32(numbers.data[2]);
    print " ";
    print_i32(numbers.data[3]);
    println "";
}
