{
  "name": "axe-programming-language",
  "displayName": "Axe Programming Language",
  "description": "Language support for Axe with LSP",
  "publisher": "NavidM",
  "icon": "icon.png",
  "author": {
    "name": "Navid M"
  },
  "version": "0.0.11",
  "repository": {
    "type": "git",
    "url": "https://github.com/axelang/axe.git"
  },
  "engines": {
    "vscode": ">=1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "axe",
        "aliases": [
          "Axe",
          "axe"
        ],
        "extensions": [
          ".axe",
          ".axec"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "axe",
        "scopeName": "source.axe",
        "path": "./syntaxes/axe.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Axe",
      "properties": {
        "axe.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Axe LSP server executable. If empty, uses 'axe-lsp' or 'axe-lsp.exe' from PATH."
        },
        "axe.lsp.trace": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0"
  }
}